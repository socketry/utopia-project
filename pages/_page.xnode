<!DOCTYPE html>
<html>
	<head>
		<?r response.cache! ?>
		
		<?r if title = self[:title] ?>
			<title>#{title.gsub(/<.*?>/, "")}</title>
		<?r else ?>
			<title>Utopia Project</title>
		<?r end ?>
		
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		
		<link rel="icon" type="image/png" href="/_static/icon.png" />
		<link rel="stylesheet" href="/_static/site.css" type="text/css" media="screen" />
		
		#{Utopia::Project::IMPORT_MAP.relative_to(request.env["REQUEST_PATH"]).to_html}
		<script type="module" src="/_static/application.js"></script>
	</head>
	<body>
		<content:header />
		
		<main class="#{attributes[:class]}">
			<utopia:content/>
		</main>
	</body>
</html>
